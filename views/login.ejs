<div class="container">
    <h1>Login</h1>

        <% if(messages.success_msg) { %>  
            <div class="alert alert-danger" role="alert">
                <%= messages.success_msg %> 
            </div>
        <% } %>

        <% if(messages.error) { %>
            <div class="alert alert-danger" role="alert">
                <%= messages.error %> 
            </div>
        <% } %>

    <!-- form login go post-->
    <form action="/login" method="post">
        <!-- email input -->
        <div class="mb-3">
            <label for="emailInput" class="form-label">Email</label>
            <input type="email" name="email" class="form-control" id="emailInput" required>
        </div>
        <!-- password input -->
        <div class="mb-3">
            <label for="passworInput" class="form-label">Password</label>
            <input type="password" name="password" class="form-control" id="passworInput" required>
        </div>
        <button class="btn btn-primary mb-3">Submit</button>
    </form>
    <p>Non hai un account? <a href="/signup">Registrati allora!</a></p>
</div>