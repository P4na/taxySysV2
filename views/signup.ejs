<div class="container">
<h1>Sign up</h1>


    <% if(typeof errors != 'undefined') { %>
        <% errors.forEach(error=>{ %>
        <div class="alert alert-danger" role="alert">
            <%= error.message %> 
        </div>
        <% }) %>
    <% } %>


<!-- signup form -->
<form action="/signup" method="POST">
    <!-- name input -->
    <div class="mb-3">
        <label for="nicknameInput" class="form-label">Nickname</label>
        <input type="text" name="nickname" class="form-control" id="nicknameInput" required>
    </div>
    <!-- email input -->
    <div class="mb-3">
        <label for="emailInput" class="form-label">Email</label>
        <input type="email" name="email" class="form-control" id="emailInput" required>
    </div>
    <!-- password input -->
    <div class="mb-3">
        <label for="passworInput" class="form-label">Password</label>
        <input type="password" name="password" class="form-control" id="passworInput" required>
    </div>
    <!-- password input -->
    <div class="mb-3">
        <label for="passwor2Input" class="form-label">Conferma password</label>
        <input type="password" name="password2" class="form-control" id="passwor2Input" required>
    </div>
    <button class="btn btn-primary mb-3">Submit</button>
</form>
<div class="container">
    <p>Sei gi√† registrato? <a href="/login">fai il login!</a></p>
</div>
</div>